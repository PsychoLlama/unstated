{
  "name": "@psychollama/unstated",
  "description": "Observable, transaction-oriented state management for React",
  "packageManager": "yarn@3.3.0",
  "author": "Jesse Gibson",
  "license": "MIT",
  "version": "0.0.0",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "github.com/PsychoLlama/unstated"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "vite build --sourcemap",
    "test": "run test:coverage && run test:lint && run test:fmt",
    "test:unit": "vitest --color --passWithNoTests",
    "test:coverage": "run test:unit --coverage",
    "test:lint": "eslint src --ext ts,tsx --color",
    "test:fmt": "prettier --check src",
    "fmt": "prettier --write src"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "./**/__tests__/*.ts{x,}"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx?": [
      "eslint",
      "prettier --check"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "keywords": [
    "react",
    "hooks",
    "state",
    "transaction",
    "effects"
  ],
  "devDependencies": {
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^18.11.13",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitest/coverage-c8": "^0.25.7",
    "eslint": "^8.29.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "4.8.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.6"
  },
  "dependencies": {
    "immer": "^9.0.17"
  }
}
